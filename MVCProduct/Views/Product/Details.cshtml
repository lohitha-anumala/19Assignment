@model MVCProduct.Models.Product
@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Details</h2>
<table class="table table-bordered table-hover">


    <tr>
        <td>Product Id</td>
        <td>
            @Model.ProductId
        </td>
    </tr>
    <tr>
        <td>Product Name</td>
        <td>
            @Model.ProductName
        </td>
    </tr>
    <tr>
        <td>Rate</td>
        <td>@Model.Rate</td>
    </tr>


</table>

